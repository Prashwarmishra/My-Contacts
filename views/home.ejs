<!DOCTYPE html>
<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

    </head>
    <body>
        <h1><i class="fas fa-address-book"></i>Contacts</h1>
        <div id="contact-container">
            <ul>
                <%for (let i of contact_list){%>
                    <li id="contact">
                        <div id="details">
                            <p><%= i.name %></p>
                            <p><%= i.phone %></p>
                        </div>
                        <div>
                            <a href="/delete-contact/?id=<%= i._id %>">
                                <i class="fas fa-window-close"></i>
                            </a>
                        </div>
                    </li>
                <%}%>
            </ul>
        </div>

        <form action="create-contact" method="POST">
            <input type="text" name="name" id="contact-name" placeholder="Enter Name" required>
            <input type="number" name="phone" id="contact-phone" placeholder="Enter Phone" required>
            <button type="submit" id="contact-button">Create Contact</button>
        </form>

    </body>
</html>